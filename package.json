{
  "name": "hono-open-api-starter",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "start": "bun ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "cross-env NODE_ENV=test vitest",
    "build": "npx wrangler types && tsc && tsc-alias",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push:local": "wrangler d1 migrations apply DB --local",
    "db:push:remote": "wrangler d1 migrations apply DB --remote",
    "db:push:test": "drizzle-kit push --config=drizzle.config.test.ts",
    "db:studio:local": "LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
    "db:studio:remote": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "@hono/zod-openapi": "^0.19.8",
    "@scalar/hono-api-reference": "^0.9.1",
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.1",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.7.11",
    "hono-pino": "^0.8.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "stoker": "^1.4.2",
    "zod": "^3.25.46"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@cloudflare/workers-types": "^4.20250601.0",
    "@types/bun": "^1.2.15",
    "@types/node": "^22.15.29",
    "bun-types": "^1.2.15",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.28.0",
    "eslint-plugin-format": "^1.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4",
    "wrangler": "^4.18.0"
  }
}
